<!DOCTYPE html>
<html>
  <%- include('head.ejs', {title: 'Registo'}); %>

  <body>
    <div class="container">
        <div class="shadow-lg p-3 mt-3 bg-white rounded">
            <h3 class="text-center">Cria a tua conta</h3>
            <form action="/registo" method="post">
                <!--verifica criação do email -->
                <div class="form-group">
                    <% if (error_check_email == true) { %>
                    <div>
                        <label for="check_email">Email</label>
                    </div>
                    <div>
                        <label for="check_email" class="text-danger">
                            O Email é de preenchimento obrigatório.
                        </label>
                    </div>

                    <% } else { %>
                        <label for="check_email">Email</label>
                    <% } %>
                    <input type="email" 
                    class="form-control" 
                    id="check_email" 
                    name="check_email"
                    placeholder="nome@email.com"/>
                </div>
                
                <!-- numero de membro da UMa -->
                <div class="form-group">
                    <% if (error_check_number == true) { %>
                        <div>
                            <label for="check_numero">Número</label>
                        </div>
                    
                    <div>
                        <label for="check_numero" class="text-danger">
                            O Número é de preenchimento obrigatório.
                        </label>
                    </div>
                    <% } else { %>
                        <label for="check_numero">Número</label>
                    <% } %>
                    <input type="number" 
                    class="form-control" 
                    id="check_numero"
                    name="check_numero"; 
                    placeholder="ex: 2087624">
                </div>

                <!-- Criação da password -->
                <div class="form-group">
                    <% if ( error_check_password == true) { %>
                    <label for="check_password">Password</label>
                    <div>
                        <label for="check_password" class="text-danger">
                            A Password é de preenchimento obrigatório.
                        </label>
                    </div>
                    <% } else { %>
                        <label>
                            <label for="check_numero">Password</label>
                        </label>
                    <% } %>
                    <input type="password" 
                    class="form-control" 
                    id="check_password" 
                    name="check_password"
                    placeholder="Password">
                </div>

                <!-- Confirmação da password -->
                <div class="form-group">
                    <% if (error_check_confirma_password == true) { %>
                    <label for="check_confirma_password">Confirmar Password</label>
                    <div>
                        <label for="check_confirma_password" class="text-danger">
                            O Confirmar Password é de preenchimento obrigatório.
                        </label>
                    </div>
                    <% } else { %>
                        <label>
                            <label for="check_numero">Confirmar Password</label>
                        </label>
                    <% } %>
                    <input type="password" 
                    class="form-control" 
                    id="check_confirma_password" 
                    name="check_confirma_password"
                    placeholder="Confirmar Password">
                </div>

                <!-- Achei engraçado ter isto -->
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="check">
                    <label class="form-check-label" for="check">
                        Concordo com os termos e condições
                    </label>
                </div>

                <button type="submit" class="btn btn-outline-dark">Criar conta</button>
            </form>
        </div>
    </div>

  </body>
</html>
